---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout
  title="Experiences"
  description="Join us for hackathons, workshops, and community gatherings focused on Building Intelligent Freedom"
>
  <div class="container mx-auto px-4 py-16">
    <header class="mb-12 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-primary-indigo mb-4">
        Experiences
      </h1>
      <p class="text-lg text-primary-indigo/70 max-w-2xl mx-auto">
        Join us for hackathons, workshops, and community gatherings focused on Building Intelligent Freedom.
      </p>
    </header>

    {/* CTA Button */}
    <div class="text-center">
      <a
        href="https://lu.ma/aifreedomlab"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-primary-cyan text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-accent-magenta transition-colors duration-200"
      >
        Join an Experience
      </a>
    </div>
  </div>
</BaseLayout>
